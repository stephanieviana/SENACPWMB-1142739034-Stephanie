function realizarContagem() {
    const numeroN = parseInt(document.getElementById("numeroInput").value);
    const fatorF = parseInt(document.getElementById("fatorInput").value);

    if (isNaN(numeroN) || isNaN(fatorF)) {
        alert("Por favor, insira valores v√°lidos para 'n' e 'f'");
        return;
    }

    const limite = numeroN * fatorF;
    let somaParcial = 0;
    let resultadoTexto = "";

    for (let i = numeroN; i <= limite; i += fatorF) {
        somaParcial += i;
        resultadoTexto += somaParcial + ", ";
    }

    document.getElementById("resultado").textContent = resultadoTexto.slice(0, -2);
